@using HairSalon.Models; 
@model HairSalon.Models.Stylist;

@{
  Layout = "_Layout";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<h3>@Html.DisplayNameFor(model => model.Details): @Html.DisplayFor(model => model.Details)</h3>
<hr />

<ul>
@if (@Model.Clients.Count == 0)
{
  <p>This stylist has no clients</p>
}

@foreach (Client client in @Model.Clients)
{
  <li>@Html.ActionLink(@client.Name, "Details", "Clients", new { id = client.ClientId})</li>
}
</ul>

<p>@Html.ActionLink("Add a Client", "Create", "Clients")</p>
<p>@Html.ActionLink("Back to Stylists", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>