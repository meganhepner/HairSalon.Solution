@model HairSalon.Models.Client

@{
  Layout = "_Layout";
}

<h1>New Client</h1>
<br>

@using(Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class="form-control", required="required"})
  <br>
  @Html.LabelFor(model => model.ClientPhone)
  @Html.TextBoxFor(model => model.ClientPhone, new {@class="form-control", required="required"})
  <br>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <br>
  <input type="submit" value="Add stylist" />
  <br>
}

<p>@Html.ActionLink("Back to Stylists", "Index", "Stylists")</p>